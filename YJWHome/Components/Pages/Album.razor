@page "/Album"

<head>
    <PageTitle>Album</PageTitle>
    <link rel="stylesheet" href="./a.css">
    <script src="https://kit.fontawesome.com/5077265a6a.js" crossorigin="anonymous"></script>
</head>

<body>
    <h1>여기는 앨범방</h1>
    <br>
    @InalbumCount().Length
    <hr>
    @foreach (FileInfo albumimage in @InalbumCount())
    {
        <div>
            <img src="./image/album/@albumimage.Name" alt="꽁이">
            <h3>꽁이사진</h3>
            <p>
                @albumimage.Name<br>
                안녕하세요<br>
                안녕하세요2
            </p>
        </div>
    }
</body>

@code {
    private FileInfo[] InalbumCount()
    {
        DirectoryInfo di = new DirectoryInfo("./wwwroot");
        FileInfo[] fi = di.GetFiles("./image/album/*.webp");

        ExtensionFileInfo.Shuffle<FileInfo[]>(fi);

        return fi;
    }
}